{
    "compilerOptions": {
    	"target": "es5",
        "module": "commonjs",
        "strictNullChecks": true,
        "allowJs": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "removeComments": true,
        "jsx": "react",
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                    "*",
                    "tom_modules/*"
            ]
        }
    },
    "include": [
        "src/*",
        "__tests__/*"
    ]
}